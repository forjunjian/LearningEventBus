<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="事件传递"
                style="@style/TitleTextView"/>
            <!-- ################################ -->
            <Button
                android:text="主线程发布到Posting模式"
                android:id="@+id/event_main_posting"
                style="@style/Btns"/>
            <Button
                style="@style/Btns"
                android:id="@+id/event_sub_posting"
                android:text="子线程发布到Posting模式"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#660066"
                />
            <!-- ################################ -->
            <Button
                android:text="主线程发布到Main模式"
                android:id="@+id/event_main_main"
                style="@style/Btns"/>
            <Button
                style="@style/Btns"
                android:id="@+id/event_sub_main"
                android:text="子线程发布到Main模式"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#660066"
                />
            <!-- ################################ -->
            <Button
                android:text="主线程发布到Backgound模式"
                android:id="@+id/event_main_background"
                style="@style/Btns"/>
            <Button
                style="@style/Btns"
                android:id="@+id/event_sub_background"
                android:text="子线程发布到Backgound模式"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#660066"
                />
            <!-- ################################ -->
            <Button
                android:text="主线程发布到Async模式"
                android:id="@+id/event_main_async"
                style="@style/Btns"/>
            <Button
                style="@style/Btns"
                android:id="@+id/event_sub_async"
                android:text="子线程发布到Async模式"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#660066"
                />
        </LinearLayout>
        <!-- ################################ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="信息传递"
                style="@style/TitleTextView"/>
            <!-- ################################ -->
            <Button
                android:text="主线程发布到Posting模式"
                android:id="@+id/msg_main_posting"
                style="@style/Btns"/>
            <Button
                style="@style/Btns"
                android:id="@+id/msg_sub_posting"
                android:text="子线程发布到Posting模式"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#660066"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
